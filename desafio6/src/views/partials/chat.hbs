<article id='chat' class='container'>
	<h1 class='title'>Contacto:</h1>
	<div class='line'></div>
	<form class='chatForm'>
		<div class='form-section'>
			<div class='form-group'>
				<label for='email'>
					Correo:
				</label>
				<input type='email' id='inputEmail' />
			</div>
			<div class='form-group'>

				<label for='mensaje'>
					Mensaje:
				</label>
				<textarea
					name='mensaje'
					id='contenidoMensaje'
					rows='1'
				></textarea>
			</div>
			<button id='chatBtn' type='button'>Enviar Mensaje</button>
		</div>
		<div id='chatMessages'>
			{{! Aqui van los mensajes }}
		</div>
	</form>
</article>